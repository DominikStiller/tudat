#ifndef TUDAT_PATHS_HPP
#define TUDAT_PATHS_HPP

#define DATA_REL_INSTALL "/" + "@TUDAT_DATA_DIR_RELATIVE_TO_INSTALL_PREFIX@"
#define EPHEMERIS_REL_DATA "/" + "ephemeris_data" + "/"
#define EARTH_ORIENTATION_REL_DATA "/" + "earth_orientation" + "/"
#define QUADRATURE_REL_DATA "/" + "quadrature" + "/"
#define SPICE_KERNELS_REL_DATA "/" + "spice_kernels" + "/"
#define ATMOSPHERE_TABLES_REL_DATA "/" + "atmosphere_tables" + "/"
#define GRAVITY_MODELS_REL_DATA "/" + "gravity_models" + "/"
#define SPACE_WEATHER_REL_DATA "/" + "space_weather_data" + "/"

#include <string.h>

namespace tudat {
    namespace input_output {

        static inline std::string get_tudat_path() {
            return "@CMAKE_INSTALL_PREFIX@";
        }

        [[deprecated("Use get_tudat_path() instead")]]
        static inline std::string getTudatRootPath() {
            return "@CMAKE_INSTALL_PREFIX@";
        }

        static inline std::string get_tudat_data_path() {
            return get_tudat_path() + DATA_REL_INSTALL;
        }

        static inline std::string getEphemerisDataFilesPath() {
            return get_tudat_data_path() + EPHEMERIS_REL_DATA;
        }

        static inline std::string getEarthOrientationDataFilesPath() {
            return get_tudat_data_path() + EARTH_ORIENTATION_REL_DATA;
        }

        static inline std::string getQuadratureDataPath() {
            return get_tudat_data_path() + QUADRATURE_REL_DATA;
        }

        static inline std::string getSpiceKernelPath() {
            return get_tudat_data_path() + SPICE_KERNELS_REL_DATA;
        }

        static inline std::string getAtmosphereTablesPath() {
            return get_tudat_data_path() + ATMOSPHERE_TABLES_REL_DATA;
        }

        static inline std::string getGravityModelsPath() {
            return get_tudat_data_path() + GRAVITY_MODELS_REL_DATA;
        }

        static inline std::string getSpaceWeatherDataPath() {
            return get_tudat_data_path() + SPACE_WEATHER_REL_DATA;
        }

    }
}
#endif //TUDAT_PATHS_HPP
